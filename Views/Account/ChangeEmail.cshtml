@model FileManagementSystem.Models.ViewModels.ChangeEmailViewModel

@{
    ViewData["Title"] = "Change Email";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-envelope display-1 text-primary"></i>
                        <h2 class="mt-3">Change Email</h2>
                        <p class="text-muted">Update your email address</p>
                    </div>

                    <form asp-action="ChangeEmail" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="CurrentEmail" class="form-control" readonly />
                            <label asp-for="CurrentEmail">Current Email</label>
                            <span asp-validation-for="CurrentEmail" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="NewEmail" class="form-control" placeholder="new@example.com" />
                            <label asp-for="NewEmail">New Email</label>
                            <span asp-validation-for="NewEmail" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <label asp-for="Password">Confirm Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">Please enter your password to confirm this change.</div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Change Email</button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 