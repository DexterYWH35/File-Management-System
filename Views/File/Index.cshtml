@model List<FileManagementSystem.Models.FileViewModel>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

@{
    ViewData["Title"] = "My Uploaded Files";
}

<h2>Uploaded Files</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <form asp-controller="File" asp-action="Search" method="get" class="d-flex">
        <input type="text" name="searchTerm" class="form-control me-2" placeholder="Search files..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-controller="File" asp-action="Index" class="btn btn-secondary ms-2">Clear</a>
    </form>
    <a asp-controller="Labels" asp-action="Index" class="btn btn-info">Manage Labels</a>
</div>

@if (Model.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Labels</th>
                <th>Upload Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>
                        @if (file.Labels.Any())
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var label in file.Labels)
                                {
                                    <span class="badge bg-primary">@label</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">No labels</span>
                        }
                    </td>
                    <td>@file.UploadDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <a asp-controller="File" asp-action="Download" asp-route-id="@file.Id" class="btn btn-success btn-sm">Download</a>
                        <a asp-controller="File" asp-action="Preview" asp-route-id="@file.Id" class="btn btn-warning btn-sm">Preview</a>
                        <form asp-controller="File" asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this file?');">
                            <input type="hidden" name="id" value="@file.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No files uploaded yet.</p>
}
